{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "clean": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx"]
    },
    "test:watch": {
      "cache": false
    },
    "build": {
      "cache": false,
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "build:prod": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "test:prod": {
      "outputs": []
    }
  }
}
